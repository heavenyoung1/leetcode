def binary_search(list, item):
  low = 0
  high = len(list)-1

  while low <= high:
    mid = (low + high)
    guess = list[mid]
    if guess == item:
      return mid
    elif guess > item:
      high = mid - 1
    else:
      low = mid + 1
  return None

my_list = [1, 3, 5, 7, 9]

print(binary_search(my_list, 9))





#РЕКУРСИЯ (БЕСКОНЕЧНАЯ)

def countdown(i):
  print(i)
  countdown(i-1)

countdown(100)
    
#РЕКУРСИЯ нормальная

def countdown(i):
  print(i)
  if i <= 0:
    return
  else: 
    countdown(i-1)

countdown(100)


